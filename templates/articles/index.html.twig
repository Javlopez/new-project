{% extends 'base.html.twig' %}

{% block title %} SfH1 title{% endblock %}

{% block body %}
<h1>Articles</h1>

    {% if articles %}
        <table class="table table-striped" id="articles">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">show</a>
                        <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles</p>
    {% endif %}


{% endblock %}

{% block javascripts %}
    <script src="/js/main1.js"></script>
{% endblock %}